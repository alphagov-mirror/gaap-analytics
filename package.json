{
  "name": "gaap-analytics",
  "version": "3.0.0",
  "description": "Shared analytics tools for GaaP products",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "npm run build && lint-staged",
    "transpile": "./node_modules/babel-cli/bin/babel.js src --out-dir lib",
    "build": "./node_modules/browserify/bin/cmd.js src/index.js -t [ babelify ] -o build/gaap-analytics.js && ./node_modules/uglify-js/bin/uglifyjs build/gaap-analytics.js -c -m -o build/gaap-analytics.min.js",
    "prepare": "npm run transpile",
    "test": "./node_modules/karma/bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/gaap-analytics.git"
  },
  "keywords": [
    "nodejs",
    "js",
    "xo",
    "GOV.UK",
    "GaaP",
    "Google Analytics",
    "Event Tracking"
  ],
  "author": "Jon Heslop",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/gaap-analytics/issues"
  },
  "homepage": "https://github.com/alphagov/gaap-analytics#readme",
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "es6"
    ],
    "globals": [
      "ga"
    ],
    "ignores": [
      "build"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "safari >= 7",
              "ie >= 10"
            ]
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-env": "^3.2.5",
    "browserify": "^16.2.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-promise": "^3.7.0",
    "husky": "^0.14.3",
    "jsdom": "^11.10.0",
    "jsdom-global": "^3.0.2",
    "karma": "^2.0.2",
    "karma-browserify": "^5.1.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.2.0",
    "lint-staged": "^7.0.5",
    "mocha": "^5.1.1",
    "sinon": "^4.5.0",
    "uglify-js": "^3.3.23",
    "watchify": "^3.11.0",
    "xo": "^0.20.3"
  }
}
